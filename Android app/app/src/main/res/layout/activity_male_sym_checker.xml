<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.akshatsharma.medifinder.maleSymChecker"
    android:id="@+id/maleSymRelLay"
    android:background="@drawable/male_body">


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/head"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:onClick="headClicked" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/neck"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:onClick="neckClicked" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:id="@+id/brest"
        android:layout_below="@+id/neck"
        android:layout_centerHorizontal="true"
        android:onClick="chestClicked"
        android:background="@null" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/abdomen"
        android:layout_below="@+id/brest"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:onClick="abdomenClicked" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:id="@+id/pelvis"
        android:layout_below="@+id/abdomen"
        android:layout_centerHorizontal="true"
        android:onClick="pelvisClicked"
        android:background="@null" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="245dp"
        android:id="@+id/rightLeg"
        android:layout_below="@+id/pelvis"
        android:layout_alignStart="@+id/pelvis"
        android:onClick="legClicked"
        android:background="@null" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="245dp"
        android:id="@+id/leftLeg"
        android:layout_below="@+id/pelvis"
        android:layout_alignEnd="@+id/pelvis"
        android:background="@null"
        android:onClick="legClicked" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:id="@+id/rightArm"
        android:layout_below="@+id/neck"
        android:layout_toStartOf="@+id/abdomen"
        android:onClick="armClicked"
        android:background="@null" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:id="@+id/leftArm"
        android:layout_below="@+id/neck"
        android:layout_toEndOf="@+id/abdomen"
        android:background="@null"
        android:onClick="armClicked" />


</RelativeLayout>
